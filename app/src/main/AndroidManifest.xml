<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WellnessTracker"
        tools:targetApi="31">

        <!-- FirstOnboard - Launcher activity -->
        <activity
            android:name=".FirstOnboard"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SecondOnboard - Regular activity -->
        <activity
            android:name=".SecondOnboard"
            android:exported="false" />

        <!-- ThirdOnboard - Regular activity -->
        <activity
            android:name=".ThirdOnboard"
            android:exported="false" />

        <!-- MainActivity - Regular activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- HydrationActivity - Working activity -->
        <activity
            android:name=".HydrationActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- MoodActivity - Working activity -->
        <activity
            android:name=".MoodActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Keep these commented out until you create the actual classes -->
        <!--
        <activity
            android:name=".StepsActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        -->

    </application>

</manifest>
