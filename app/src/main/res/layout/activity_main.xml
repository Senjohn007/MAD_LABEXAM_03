<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Decorative Elements -->
    <View
        android:id="@+id/decorative_top"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_decorative"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="-60dp"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/decorative_bottom"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_decorative"
        android:layout_marginBottom="-40dp"
        android:layout_marginEnd="-40dp"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Bar Spacer - Much Larger -->
    <View
        android:id="@+id/status_bar_spacer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Bar - Positioned Much Lower -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/status_bar_spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetRight="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/main_toolbar_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1976D2" />

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/main_profile_description"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/ic_profile"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content Area -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <!-- Welcome Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/welcome_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Welcome Title -->
                    <TextView
                        android:id="@+id/tv_welcome_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/main_welcome_title"
                        android:textColor="#1976D2"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="4dp" />

                    <!-- Welcome Subtitle -->
                    <TextView
                        android:id="@+id/tv_welcome_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="@string/main_welcome_subtitle"
                        android:textColor="#546E7A"
                        android:textSize="16sp"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Feature Cards Container -->
            <LinearLayout
                android:id="@+id/feature_cards_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Hydration Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_hydration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/hydration_emoji"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="#E0F7FA"
                            android:gravity="center"
                            android:text="ðŸ’§"
                            android:textSize="28sp"
                            android:padding="8dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_hydration_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_hydration_title"
                                android:textColor="#1976D2"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_hydration_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/card_hydration_subtitle"
                                android:textColor="#546E7A"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_hydration_arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            android:contentDescription="@string/card_hydration_nav_description"
                            app:tint="#1976D2" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Mood Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_mood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/mood_emoji"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="#E3F2FD"
                            android:gravity="center"
                            android:text="ðŸ˜Š"
                            android:textSize="28sp"
                            android:padding="8dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_mood_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_mood_title"
                                android:textColor="#1976D2"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_mood_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/card_mood_subtitle"
                                android:textColor="#546E7A"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_mood_arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            android:contentDescription="@string/card_mood_nav_description"
                            app:tint="#1976D2" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Steps Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/steps_emoji"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="#E8F5E9"
                            android:gravity="center"
                            android:text="ðŸ‘Ÿ"
                            android:textSize="28sp"
                            android:padding="8dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_steps_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_steps_title"
                                android:textColor="#1976D2"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_steps_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/card_steps_subtitle"
                                android:textColor="#546E7A"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_steps_arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            android:contentDescription="@string/card_steps_nav_description"
                            app:tint="#1976D2" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
