<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".MoodActivity">

    <!-- Decorative Elements -->
    <View
        android:id="@+id/decorative_top"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_decorative"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="-60dp"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/decorative_bottom"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_decorative"
        android:layout_marginBottom="-40dp"
        android:layout_marginEnd="-40dp"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Bar Spacer -->
    <View
        android:id="@+id/status_bar_spacer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        app:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/status_bar_spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:title="Mood Journal"
            app:titleTextColor="#1976D2" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

    <!-- Main Content - Updated Constraint -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Current Mood Selection Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mood_selection_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tv_mood_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How are you feeling right now?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:gravity="center"
                        android:layout_marginBottom="20dp" />

                    <!-- Mood Emoji Selector -->
                    <LinearLayout
                        android:id="@+id/mood_selector_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <!-- Very Happy -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mood_very_happy"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="😄"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Great"
                                android:textSize="12sp"
                                android:textColor="#546E7A"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Happy -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mood_happy"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="😊"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Good"
                                android:textSize="12sp"
                                android:textColor="#546E7A"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Neutral -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mood_neutral"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="😐"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Okay"
                                android:textSize="12sp"
                                android:textColor="#546E7A"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Sad -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mood_sad"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="😔"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sad"
                                android:textSize="12sp"
                                android:textColor="#546E7A"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Very Sad -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mood_very_sad"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="😢"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Awful"
                                android:textSize="12sp"
                                android:textColor="#546E7A"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Note Input -->
                    <EditText
                        android:id="@+id/et_mood_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:hint="Add a note (optional)"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:padding="16dp"
                        android:textColor="#1976D2"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Save Button -->
                    <Button
                        android:id="@+id/btn_save_mood"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Save Mood Entry"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Mood History Section -->
            <TextView
                android:id="@+id/tv_mood_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mood History"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="16dp" />

            <!-- Enhanced Mood Chart with Title -->
            <androidx.cardview.widget.CardView
                android:id="@+id/chart_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Chart Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6-Hour Mood Intervals"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:padding="12dp"
                        android:paddingBottom="4dp"
                        android:gravity="center" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Mood History List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mood_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_mood_history" />

            <!-- Enhanced Mood Insights Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/insights_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mood Insights"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Most Common:"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_most_common_mood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good 😊"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Trend:"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_mood_trend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stable →"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                    <!-- NEW: Today's Activity Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today's Activity:"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_today_intervals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track throughout day"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
