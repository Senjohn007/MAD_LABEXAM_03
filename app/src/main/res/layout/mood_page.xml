<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fitsSystemWindows="true"
    tools:context=".MoodActivity">

    <!-- Status Bar Spacer -->
    <View
        android:id="@+id/status_bar_spacer"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/status_bar_spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:title="Mood Journal"
            app:titleTextColor="#1976D2"
            app:subtitle="Track your emotional journey"
            app:subtitleTextColor="#757575" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Date Selector -->
    <androidx.cardview.widget.CardView
        android:id="@+id/date_selector_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/btn_previous_day"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Previous day" />

            <TextView
                android:id="@+id/tv_current_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today, June 15"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btn_next_day"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Next day" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Main Content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/date_selector_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Current Mood Selection Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mood_selection_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_mood_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How are you feeling right now?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <!-- Time of Day Selector -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <Button
                            android:id="@+id/btn_morning"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="Morning"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:background="@drawable/time_selector_unselected" />

                        <Button
                            android:id="@+id/btn_afternoon"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="Afternoon"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:background="@drawable/time_selector_unselected" />

                        <Button
                            android:id="@+id/btn_evening"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="Evening"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:background="@drawable/time_selector_unselected" />

                    </LinearLayout>

                    <!-- Mood Emoji Selector -->
                    <LinearLayout
                        android:id="@+id/mood_selector_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <!-- Very Happy -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mood_very_happy"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="😄"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Great"
                                android:textSize="12sp"
                                android:textColor="#546E7A"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Happy -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mood_happy"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="😊"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Good"
                                android:textSize="12sp"
                                android:textColor="#546E7A"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Neutral -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mood_neutral"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="😐"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Okay"
                                android:textSize="12sp"
                                android:textColor="#546E7A"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Sad -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mood_sad"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="😔"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sad"
                                android:textSize="12sp"
                                android:textColor="#546E7A"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Very Sad -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mood_very_sad"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="😢"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Awful"
                                android:textSize="12sp"
                                android:textColor="#546E7A"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Factors Influencing Mood -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Factors affecting your mood:"
                        android:textSize="14sp"
                        android:textColor="#546E7A"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_factors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:chipSpacing="8dp"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Work"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_sleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_exercise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exercise"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_social"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Social"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_health"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Health"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Note Input -->
                    <EditText
                        android:id="@+id/et_mood_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:hint="Add a note (optional)"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:padding="16dp"
                        android:textColor="#1976D2"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Save Button -->
                    <Button
                        android:id="@+id/btn_save_mood"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Save Mood Entry"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Mood History Section -->
            <TextView
                android:id="@+id/tv_mood_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mood History"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="12dp" />

            <!-- Time Period Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btn_period_week"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Week"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:background="@drawable/period_selector_unselected" />

                <Button
                    android:id="@+id/btn_period_month"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Month"
                    android:textSize="12sp"
                    android:textColor="#1976D2"
                    android:background="@drawable/period_selector_selected" />

                <Button
                    android:id="@+id/btn_period_year"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Year"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:background="@drawable/period_selector_unselected" />

            </LinearLayout>

            <!-- Enhanced Mood Chart with Title -->
            <androidx.cardview.widget.CardView
                android:id="@+id/chart_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Chart Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mood Trends"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:padding="12dp"
                        android:paddingBottom="4dp"
                        android:gravity="center" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Mood History List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mood_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_mood_history" />

            <!-- Enhanced Mood Insights Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/insights_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mood Insights"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="16dp" />

                    <!-- Average Mood -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Average Mood:"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_average_mood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good 😊"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                    <!-- Most Common Mood -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Most Common:"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_most_common_mood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good 😊"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                    <!-- Mood Trend -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Trend:"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_mood_trend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Improving ↗"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                    <!-- Top Factor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Top Factor:"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_top_factor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exercise"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />

                    </LinearLayout>

                    <!-- Today's Activity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today's Entries:"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_today_entries"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 of 3"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>