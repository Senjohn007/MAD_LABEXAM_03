<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/white">

    <!-- Progress Indicator -->
    <TextView
        android:id="@+id/tv_progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Step 1 of 3"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="24dp" />

    <!-- Welcome Title -->
    <TextView
        android:id="@+id/tv_welcome_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Your Wellness Journey"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Welcome Subtitle -->
    <TextView
        android:id="@+id/tv_welcome_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's your main wellness goal?"
        android:textSize="18sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- Illustration/Icon -->
    <ImageView
        android:id="@+id/iv_wellness_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_wellness_heart"
        android:layout_marginBottom="32dp"
        android:contentDescription="Wellness Icon" />

    <!-- Scrollable Goal Selection Cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fitness Goal -->
