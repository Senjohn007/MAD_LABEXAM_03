<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background">

    <!-- Main Content Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <!-- Progress Indicator -->
            <TextView
                android:id="@+id/tv_progress_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/progress_step_1"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:layout_marginBottom="24dp" />

            <!-- Welcome Title -->
            <TextView
                android:id="@+id/tv_welcome_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Welcome Subtitle -->
            <TextView
                android:id="@+id/tv_welcome_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_subtitle"
                android:textSize="18sp"
                android:textColor="#546E7A"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Illustration/Icon with Background -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardCornerRadius="60dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/iv_wellness_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_wellness_heart"
                    android:padding="24dp"
                    android:contentDescription="@string/wellness_icon_description" />
            </androidx.cardview.widget.CardView>

            <!-- Scrollable Goal Selection Cards -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Fitness Goal -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_fitness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="🏃"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:background="#E3F2FD"
                                android:padding="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_fitness_title"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1976D2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_fitness_description"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Hydration Goal -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_hydration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="💧"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:background="#E0F7FA"
                                android:padding="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_hydration_title"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1976D2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_hydration_description"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Mood Tracking Goal -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_mood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="😊"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:background="#FFF8E1"
                                android:padding="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_mood_title"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1976D2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_mood_description"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Stress Goal -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_stress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="😌"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:background="#E8F5E9"
                                android:padding="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_stress_title"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1976D2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_stress_description"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Sleep Goal -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_sleep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="💤"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:background="#EDE7F6"
                                android:padding="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_sleep_title"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1976D2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_sleep_description"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Weight Goal -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="⚖️"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:background="#FFEBEE"
                                android:padding="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_weight_title"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1976D2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goal_weight_description"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>

            <!-- Continue Button -->
            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/continue_button"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- Skip Button -->
            <TextView
                android:id="@+id/tv_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/skip_button"
                android:textSize="14sp"
                android:textColor="#546E7A"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Decorative Elements -->
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_decorative"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="-60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0.1" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_decorative"
        android:layout_marginBottom="-40dp"
        android:layout_marginEnd="-40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0.1" />
</androidx.constraintlayout.widget.ConstraintLayout>
