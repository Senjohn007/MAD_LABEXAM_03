<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background">

    <!-- Main Content Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Progress Indicator -->
            <TextView
                android:id="@+id/tv_progress_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Step 2 of 3"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:layout_marginBottom="24dp" />

            <!-- Welcome Title -->
            <TextView
                android:id="@+id/tv_experience_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What's Your Experience Level?"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Welcome Subtitle -->
            <TextView
                android:id="@+id/tv_experience_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help us personalize your wellness plan"
                android:textSize="18sp"
                android:textColor="#546E7A"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Illustration/Icon with Background -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardCornerRadius="60dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/iv_experience_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_fitness_levels"
                    android:padding="24dp"
                    android:contentDescription="Experience Level Icon" />
            </androidx.cardview.widget.CardView>

            <!-- Experience Level Selection Cards -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Beginner Level -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_beginner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="24dp">

                            <TextView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="ðŸŒ±"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="#E8F5E9"
                                android:padding="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Beginner"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#1976D2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Just starting my wellness journey"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <!-- Selection indicator -->
                            <ImageView
                                android:id="@+id/iv_beginner_selected"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unselected"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="Selection Indicator" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Intermediate Level -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_intermediate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="24dp">

                            <TextView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="ðŸš€"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="#E3F2FD"
                                android:padding="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Intermediate"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#1976D2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="I have some experience with fitness"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <!-- Selection indicator -->
                            <ImageView
                                android:id="@+id/iv_intermediate_selected"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unselected"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="Selection Indicator" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Advanced Level -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_advanced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="24dp">

                            <TextView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:text="ðŸ’ª"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="#FFEBEE"
                                android:padding="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Advanced"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#1976D2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="I'm an experienced fitness enthusiast"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <!-- Selection indicator -->
                            <ImageView
                                android:id="@+id/iv_advanced_selected"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_radio_unselected"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="Selection Indicator" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Feature Preview Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="#E3F2FD">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Based on your selection, we'll enable:"
                                android:textSize="16sp"
                                android:textColor="#1976D2"
                                android:layout_marginBottom="12dp" />

                            <!-- Feature list -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:text="âœ“"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:textColor="#4CAF50" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Personalized habit recommendations"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:text="âœ“"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:textColor="#4CAF50" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Adaptive difficulty levels"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:text="âœ“"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:textColor="#4CAF50" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Customized progress tracking"
                                    android:textSize="14sp"
                                    android:textColor="#546E7A"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>

            <!-- Continue Button -->
            <Button
                android:id="@+id/btn_continue_step2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- Skip Button -->
            <TextView
                android:id="@+id/tv_skip_step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Skip for now"
                android:textSize="14sp"
                android:textColor="#546E7A"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Decorative Elements -->
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_decorative"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="-60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0.1" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_decorative"
        android:layout_marginBottom="-40dp"
        android:layout_marginEnd="-40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0.1" />
</androidx.constraintlayout.widget.ConstraintLayout>