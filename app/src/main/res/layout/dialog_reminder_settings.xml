<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Enable/Disable Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Reminders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <Switch
                android:id="@+id/switch_reminders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Reminder Interval Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminder Interval"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rg_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rb_1_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every 1 hour"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_2_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every 2 hours"
                android:textSize="14sp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_3_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every 3 hours"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_4_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every 4 hours"
                android:textSize="14sp" />

        </RadioGroup>

        <!-- Time Range Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Hours"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <Button
                    android:id="@+id/btn_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8:00 AM"
                    android:textSize="14sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <Button
                    android:id="@+id/btn_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:00 PM"
                    android:textSize="14sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

        <!-- Days of Week Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Days"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <CheckBox
                android:id="@+id/cb_sunday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sun"
                android:textSize="12sp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cb_monday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mon"
                android:textSize="12sp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cb_tuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tue"
                android:textSize="12sp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cb_wednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wed"
                android:textSize="12sp"
                android:checked="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/cb_thursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thu"
                android:textSize="12sp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cb_friday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fri"
                android:textSize="12sp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cb_saturday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sat"
                android:textSize="12sp"
                android:checked="true" />

            <!-- Empty space to balance the layout -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
