                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1976D2"
                                android:layout_marginBottom="16dp" />

                            <!-- Goal Summary -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

