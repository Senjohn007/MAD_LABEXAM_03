    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/white">

    <!-- Progress Indicator -->
    <TextView
        android:id="@+id/tv_progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Step 3 of 3"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="24dp" />

    <!-- Completion Title -->
    <TextView
        android:id="@+id/tv_completion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You're All Set!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Completion Subtitle -->
    <TextView
        android:id="@+id/tv_completion_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your personalized wellness journey is ready"
        android:textSize="18sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- Completion Icon -->
