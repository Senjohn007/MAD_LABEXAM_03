        android:id="@+id/iv_completion_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_wellness_complete"
        android:layout_marginBottom="32dp"
        android:contentDescription="Completion Icon" />

