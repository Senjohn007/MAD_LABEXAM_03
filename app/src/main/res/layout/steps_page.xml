<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".StepsActivity">

    <!-- Decorative Elements -->
    <View
        android:id="@+id/decorative_top"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_decorative"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="-60dp"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/decorative_bottom"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_decorative"
        android:layout_marginBottom="-40dp"
        android:layout_marginEnd="-40dp"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Bar Spacer -->
    <View
        android:id="@+id/status_bar_spacer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        app:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/status_bar_spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:title="Step Counter"
            app:titleTextColor="#1976D2" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

    <!-- Main Content - Updated Constraint -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Today's Steps Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/todays_steps_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E8F5E9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tv_todays_steps_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today's Steps"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:gravity="center"
                        android:layout_marginBottom="20dp" />

                    <!-- Step Counter Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <!-- Step Icon -->
                        <TextView
                            android:id="@+id/tv_step_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="ðŸ‘Ÿ"
                            android:textSize="36sp"
                            android:gravity="center"
                            android:background="#C8E6C9"
                            android:padding="8dp" />

                        <!-- Step Count -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="24dp">

                            <TextView
                                android:id="@+id/tv_step_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#1976D2" />

                            <TextView
                                android:id="@+id/tv_step_goal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="of 10,000 steps"
                                android:textSize="16sp"
                                android:textColor="#546E7A" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progress_steps"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_steps"
                        android:layout_marginBottom="8dp"
                        tools:progress="85" />

                    <!-- Percentage -->
                    <TextView
                        android:id="@+id/tv_step_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0% of daily goal"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:layout_gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Daily Goal Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_daily_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Goal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:gravity="center"
                        android:layout_marginBottom="20dp" />

                    <!-- Goal Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <!-- Goal Icon -->
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="ðŸŽ¯"
                            android:textSize="36sp"
                            android:gravity="center"
                            android:background="#FFE0B2"
                            android:padding="8dp" />

                        <!-- Goal Count -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="24dp">

                            <TextView
                                android:id="@+id/tv_daily_goal_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10,000"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#1976D2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="steps per day"
                                android:textSize="16sp"
                                android:textColor="#546E7A" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Goal Status -->
                    <TextView
                        android:id="@+id/tv_goal_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,000 steps to go!"
                        android:textSize="14sp"
                        android:textColor="#FF9800"
                        android:layout_gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Activity Summary Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/activity_summary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activity Summary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="16dp" />

                    <!-- Distance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Distance"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 km"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />

                    </LinearLayout>

                    <!-- Calories -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Calories Burned"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 cal"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />

                    </LinearLayout>

                    <!-- Active Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Active Time"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <TextView
                            android:id="@+id/tv_active_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0h 0m"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Manual Entry Section -->
            <TextView
                android:id="@+id/tv_manual_entry_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Steps Manually"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="16dp" />

            <!-- Manual Entry Layout -->
            <LinearLayout
                android:id="@+id/ll_manual_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/et_manual_steps"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="Enter steps"
                    android:inputType="number"
                    android:padding="16dp"
                    android:textColor="#1976D2"
                    android:textColorHint="#546E7A"
                    android:textSize="16sp"
                    android:maxLength="6" />

                <Button
                    android:id="@+id/btn_add_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Add"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_primary"
                    android:enabled="false" />

            </LinearLayout>

            <!-- Step History Section -->
            <TextView
                android:id="@+id/tv_step_history_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step History"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="16dp" />

            <!-- Step History List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_step_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_step_history" />

            <!-- Weekly Chart Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/weekly_chart_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weekly Progress"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="16dp" />

                    <!-- Weekly Chart -->
                    <LinearLayout
                        android:id="@+id/ll_weekly_chart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Sunday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_sun_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="10sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_sun"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="20dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/progress_vertical"
                                android:rotation="270" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sun"
                                android:textSize="10sp"
                                android:textColor="#546E7A" />

                        </LinearLayout>

                        <!-- Monday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_mon_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="10sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_mon"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="20dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/progress_vertical"
                                android:rotation="270" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mon"
                                android:textSize="10sp"
                                android:textColor="#546E7A" />

                        </LinearLayout>

                        <!-- Tuesday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_tue_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="10sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_tue"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="20dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/progress_vertical"
                                android:rotation="270" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tue"
                                android:textSize="10sp"
                                android:textColor="#546E7A" />

                        </LinearLayout>

                        <!-- Wednesday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_wed_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="10sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_wed"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="20dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/progress_vertical"
                                android:rotation="270" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wed"
                                android:textSize="10sp"
                                android:textColor="#546E7A" />

                        </LinearLayout>

                        <!-- Thursday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_thu_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="10sp"
                                android:textColor="#4CAF50"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_thu"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="20dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/progress_vertical"
                                android:rotation="270" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thu"
                                android:textSize="10sp"
                                android:textColor="#4CAF50"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Friday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_fri_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="10sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_fri"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="20dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/progress_vertical"
                                android:rotation="270" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fri"
                                android:textSize="10sp"
                                android:textColor="#546E7A" />

                        </LinearLayout>

                        <!-- Saturday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_sat_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="10sp"
                                android:textColor="#1976D2"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_sat"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="20dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/progress_vertical"
                                android:rotation="270" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sat"
                                android:textSize="10sp"
                                android:textColor="#546E7A" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Chart Summary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/tv_weekly_average"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Average: 0 steps/day"
                            android:textSize="14sp"
                            android:textColor="#546E7A"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_weekly_best"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Best: 0 steps"
                            android:textSize="14sp"
                            android:textColor="#546E7A"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Set Goal Button -->
            <Button
                android:id="@+id/btn_set_goal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Set Daily Goal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:background="@drawable/button_secondary"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
